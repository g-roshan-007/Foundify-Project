<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/f0ae8b0695.js" crossorigin="anonymous"></script>
    <style>
        html {
            scroll-behavior: smooth;
        }

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            height: 100%;

        }

        .navbar {
            overflow: hidden;
            background-color: #ffffff;
            position: fixed;
            bottom: 0;
            left: 0;
            z-index: 1000;
            width: 100%;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .navbar a {
            display: block;
            color: #686666;
            text-align: center;
            padding: 8px 16px;
            text-decoration: none;
            font-size: 15px;
            border-radius: 10px;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        .navbar a.active {
            background-color: #0087e8;
            color: white;
        }

        .navbar .icon {
            display: none;
        }

        @media screen and (max-width: 600px) {
            .navbar a:not(:first-child) {
                display: none;
            }

            .navbar a.icon {
                float: right;
                display: block;
            }
        }

        @media screen and (max-width: 600px) {
            .navbar.responsive .icon {
                position: absolute;
                right: 0;
                bottom: 0;
            }

            .navbar.responsive a {
                float: none;
                display: block;
                text-align: left;
            }
        }

        .container {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            background-color: #e7e5e5;
            padding-bottom: 60px;
            /* height of the navbar */
            position: relative;
            min-height: calc(100vh - 60px);
            /* Adjusting for navbar height */
            overflow-y: auto;
            /* It'll show scrollbar only if content overflows */
        }

        .post-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
            margin: 10px;
            width: calc(50% - 20px);
            overflow: hidden;
        }

        .post-card img {
            width: 100%;
            max-height: 300px;
            object-fit: cover;
            border-radius: 10px;
            margin-top: 10px;
        }

        .post-card p {
            margin: 15px 0;
            color: #333;
            font-size: 14px;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .user-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .user-info span {
            font-weight: bold;
            font-size: 16px;
        }

        .post-card:hover {
            transform: scale(1.05);
            transition: transform 0.3s;
            cursor: pointer;
        }

        /* Modal Styles */
        #myModal {
            display: none;
            position: fixed;
            z-index: 1001;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.7);
        }

        #myModal img {
            margin: auto;
            display: block;
            width: 80%;
            max-width: 700px;
            max-height: 90%;
        }

        #myModal span {
            position: absolute;
            top: 15px;
            right: 35px;
            color: white;
            font-size: 40px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="container">
        <% posts.forEach(post=> { %>
            <div class="post-card">
                <!-- User Info -->
                <div class="user-info">
                    <img src="<%= post.userImageURL %>" alt="User Image">
                    <span>
                        <%= post.username %>
                    </span>
                </div>
                <!-- Post Content -->
                <p>
                    <%= post.content %>
                </p>
                <!-- Attached Image -->
                <% if(post.imageUrl) { %>
                    <img src="<%= post.imageUrl %>" alt="User's post image"
                        onclick="openModal('<%= post.imageUrl %>')" />
                    <% } %>
            </div>
            <% }); %>
    </div>

    <!-- The Modal -->
    <div id="myModal">
        <span onclick="closeModal()">&times;</span>
        <img id="img01">
    </div>

    <div class="navbar" id="myNavbar">
        <a href="/dashboard" class="active"><i class="fa-solid fa-house" style="font-size: 20px;"></i><br>Home</a>
        <a href="/post"><i class="fa-solid fa-square-plus" style="font-size: 20px;"></i><br>Post</a>
        <a href="/profile"><i class="fa-solid fa-user" style="font-size: 20px;"></i><br>Profile</a>
        <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="myFunction()">&#9776;</a>
    </div>

    <script>
        function myFunction() {
            var x = document.getElementById("myNavbar");
            if (x.className === "navbar") {
                x.className += " responsive";
            } else {
                x.className = "navbar";
            }
        }

        // Modal Functions
        function openModal(src) {
            document.getElementById("myModal").style.display = "block";
            document.getElementById("img01").src = src;
        }

        function closeModal() {
            document.getElementById("myModal").style.display = "none";
        }
    </script>
</body>

</html>